<%= simple_form_for(@endereco) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :logradouro %>
    <%= f.input :numero %>
    <%= f.input :bairro %>
    <%= f.input :cidade %>
    <%= f.input :cep %>
    <%= f.input :referencia %>
    <%= f.input :telefone_fixo %>
    <%= f.input :telefone_movel %>
    <%= f.input :fax %>
    <%= f.input :email %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
