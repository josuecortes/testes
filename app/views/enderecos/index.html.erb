<h1>Listing enderecos</h1>

<table>
  <tr>
    <th>Logradouro</th>
    <th>Numero</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Cep</th>
    <th>Referencia</th>
    <th>Telefone fixo</th>
    <th>Telefone movel</th>
    <th>Fax</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enderecos.each do |endereco| %>
  <tr>
    <td><%= endereco.logradouro %></td>
    <td><%= endereco.numero %></td>
    <td><%= endereco.bairro %></td>
    <td><%= endereco.cidade %></td>
    <td><%= endereco.cep %></td>
    <td><%= endereco.referencia %></td>
    <td><%= endereco.telefone_fixo %></td>
    <td><%= endereco.telefone_movel %></td>
    <td><%= endereco.fax %></td>
    <td><%= endereco.email %></td>
    <td><%= link_to 'Show', endereco %></td>
    <td><%= link_to 'Edit', edit_endereco_path(endereco) %></td>
    <td><%= link_to 'Destroy', endereco, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

